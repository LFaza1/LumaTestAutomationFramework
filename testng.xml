    <classes>
      <class name="Tests.CartTest">
      	<methods>
      		<include name="addProductToCartWithNavigation"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->
  <test name="Add/Delete from Cart Test">
    <classes>
      <class name="Tests.CartTest">
      	<methods>
      		<include name="addAndDeleteProductFromCart"></include>
      	</methods>
      </class>
    </classes>
  </test> <!-- Test -->

</suite> <!-- Suite -->
