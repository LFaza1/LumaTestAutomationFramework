    <classes>
      <class name="Tests.SignUpTest"/>
      <class name="Tests.SignInTest"/>
    </classes>
  </test> <!-- Test -->
  <test name="End to End Product Purchase Test">
    <classes>
      <class name="Tests.ProductPurchase"/>
    </classes>
  </test> <!-- Test -->
  <test name="Wish List Funtionality">
    <classes>
      <class name="Tests.WishList"/>
    </classes>
  </test> <!-- Test -->
